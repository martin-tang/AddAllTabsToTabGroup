{
  "manifest_version": 3,
  "name": "Add All Tabs to Tab Group",
  "version": "1.0",
  "description": "Convert Chrome windows to Tab Groups",
  "permissions": [
    "tabs",
    "tabGroups",
    "sidePanel",
    "windows",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/48.png",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  }
}